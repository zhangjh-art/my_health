<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cnasoft.health.userservice.mapper.SensitiveWordMapper">

    <select id="findList" resultType="com.cnasoft.health.userservice.model.SensitiveWord">
        select s.id,s.text,u.name as create_by_name,s.create_time
        from sensitive_word s
        left join sys_user u on u.id = s.create_by
        <where>
            s.is_deleted = 0
            <if test="p.id != null and p.id != ''">
                and s.id = #{p.id}
            </if>
            <if test="p.text != null and p.text != ''">
                and s.text like concat('%', #{p.text}, '%')
            </if>
        </where>
        order by s.id desc
    </select>

</mapper>
