<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cnasoft.health.userservice.mapper.MessageMapper">
    <select id="findList" resultType="com.cnasoft.health.userservice.model.Message">
        select * from message where is_deleted = 0
        <if test="u.userId != null and u.userId != ''">
            and user_id = #{u.userId}
        </if>
        order by id desc
    </select>
</mapper>