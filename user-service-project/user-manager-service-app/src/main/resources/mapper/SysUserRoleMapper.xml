<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cnasoft.health.userservice.mapper.SysUserRoleMapper">

    <select id="findRolesByUserId" resultType="com.cnasoft.health.userservice.model.SysRole">
		select r.*,u.user_id from sys_role r
		inner join sys_user_role u on r.id = u.role_id
		<where>
		    r.is_deleted = 0 and u.is_deleted = 0
            <if test="userId != null">
                and u.user_id = #{userId}
            </if>
        </where>
	</select>

</mapper>